<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Login to Primechain-KYC</h3>
                </div>
                <div class="panel-body">
                    {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                    {{/if}} {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                    {{/if}} {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    {{/if}}
                    <form role="form" action='/login' method="POST">
                        <fieldset>
                            <div class="form-group">
                                <p>Email address:</p>
                                <input class="form-control" placeholder="E-mail" name="username" type="email" autofocus autocomplete="off">
                                <br/>
                            </div>
                            <div class="form-group">
                                <p>Password</p>
                                <input class="form-control" placeholder="Password" name="password" type="password" autocomplete="off">
                                <br/>
                            </div>
                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login">
                            <br/>
                            <a href='/forget_password'>Forgot password?</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>