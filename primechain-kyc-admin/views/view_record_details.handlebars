<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>
                        {{title}}
                    </h4>
                </div>
                <div class="panel-body">
                    <table width='100%' class='table table-striped table-bordered table-hover' id='dataTables-example'>
                        <thead>
                            <tr>
                               
                                <th style="width: 35%">CIN</th>
                                <th style="width: 30%">Document category,
                                    <br> sub category</th>
                                <th style="width: 30%">Document description</th>
                                <th style="width: 10%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if data}}
                            <tr>
                               
                                <td>{{data.cin}}</td>
                                <td>{{data.categories}},
                                    <br> {{data.sub_categories}}
                                    <td>{{data.metadata}}</td>
                                </td>
                                <td>
                                    <div class="download-content">
                                        <form action="/user/download_document" autocomplete="off" method="POST">
                                            <div style="margin-top:10px; text-align:center;">
                                                <input type="hidden" name="document" value="{{data.document}}" />
                                              
                                                <input type="submit" class="btn btn-success btn-md" style="float: left; width:100px; font-size: 16px; margin-bottom: 0.3em; margin-left: 10px;"
                                                    value="Download">
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>