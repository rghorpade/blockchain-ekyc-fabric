<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>
                        {{title}}
                    </h4>
                </div>
                <div class="panel-body">
                    {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                    {{/if}} {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                    {{/if}} {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    {{/if}}
                    <table width='100%' class='table table-striped table-bordered table-hover' id='dataTables-example'>
                        <thead>
                            <tr>
                                <th style="width:20%">Name</th>
                                <th style="width:20%">Email</th>
                                <th style="width:20%">Status</th>
                                <th style="width:20%">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#if members}}{{#each members}}
                            <tr>
                                <td style="width:20%">{{name}}</td>
                                <td style="width:20%">{{email}}</td>
                                <td style="width:20%">{{#if isWhiteListed}}
                                    <span class="text-success">Whitelisted</span>{{else}}
                                    <span class="text-danger">Not Whitelisted</span>{{/if}}</td>
                                <td style="width:20%">

                                    <div class="approve-content">
                                        <form action="/user/kyc_corporate_save_whitelist" autocomplete="off" method="POST">
                                            <div style="margin-top:10px; text-align:center;">
                                                <input type="hidden" name="member_name" value="{{name}}" />
                                                <input type="hidden" name="email" value="{{email}}" />
                                                <input type="hidden" name="public_address" value="{{public_address}}" />
                                                <input type="hidden" name="isWhiteListed" value="{{isWhiteListed}}" /> {{#if isWhiteListed}}
                                                <input type="submit" class="btn btn-danger" style="float: left; width:150px; font-size: 16px; margin-bottom: 0.5em" value="Remove"> {{else}}
                                                <input type="submit" class="btn btn-success" style="float: left; width:150px; font-size: 16px; margin-bottom: 0.5em" value="Whitelist"> {{/if}}
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}{{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>